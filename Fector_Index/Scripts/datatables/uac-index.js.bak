$(document).ready(function () {
	$('#myTable thead tr#GvFilter th.filter').each(function () {
		var title = $('#myTable thead tr.GvHeader th').eq($(this).index()).text().trim();
		$(this).html('<input type="text" class="form-control input-sm filter-input" style="width:100%" placeholder="Find ' + title + '" />');
	});
	var table = $('#myTable').DataTable({
		"autoWidth": false,
		"info": false,
		"sAjaxSource": ajaxHandler,
		"bLengthChange": false,
		"oLanguage": {
			"sProcessing": "<div class='text-center'><img src='" + baseUrl + "/Content/Images/loading.gif'>"
		},
		"aoColumnDefs": [{
			'bSortable': false, 'aTargets': [4] //Disable sort for last column
		}],
		"bProcessing": true,
		"bServerSide": true,
		"aoColumns": [
            { "sName": "UserlevelId", "sWidth": "0%" },
            { "sName": "Description", "sWidth": "40%" },
            { "sName": "UseLimit", "sWidth": "25%" },
            { "sName": "Status", "sWidth": "25%" },
            { "sName": "Task", "sWidth": "10%" },
		],
		"fnRowCallback": function (nRow, aData, iDisplayIndex, iDisplayIndexFull) {
		    $('td', nRow).addClass("GvRow");
		    $('td:eq(0)', nRow).addClass("hidden");
			var id = $('td:eq(0)', nRow).text();
			var status = $('td:eq(4)', nRow).text();
			var controller = '<div><a href="' + baseUrl + 'UAC/Edit/' + id + '/" title="Edit"><span class="btn btn-info btn-sm fa fa-edit"></span><a>' +
                             '<input id="id" name="id" type="hidden" value="' + id + '">' +
                             '</form>';
			if (status.indexOf("INACTIVE") > -1) {
			    controller += '<form id="formActivateUAC" action="' + baseUrl + 'UAC/Activate" method="post"  class="btn btn-info btn-sm fa fa-check" title="Activate UAC">' +
                              '<input id="id" name="id" type="hidden" value="' + id + '">' +
                              '</form>';
			}
			else {
			    controller += '<form id="formInactivateUAC" action="' + baseUrl + 'UAC/Inactivate" method="post"  class="btn btn-info btn-sm fa fa-close " title="Inactivate UAC">' +
                              '<input id="id" name="id" type="hidden" value="' + id + '">' +
                              '</form>';
			}
			controller += '<form id="formDelete" action="' + baseUrl + 'UAC/Delete" method="post"  class="btn btn-info btn-sm fa fa-trash-o" title="Delete">' +
                          '<input id="id" name="id" type="hidden" value="' + id + '">' +
                          '</form><div>';

			if (status.indexOf("PENDING") == -1) {
			    $('td:eq(4)', nRow).html(controller);
			}

			if (Math.ceil((this.fnSettings().fnRecordsDisplay()) / this.fnSettings()._iDisplayLength) > 1) {
				$('.dataTables_paginate').css("display", "block");
			} else {
				$('.dataTables_paginate').css("display", "none");
			}
		}
	});
	$("#GvHeader").after($("#GvFilter"));
	$("#BtnFilter").bind("click", function () {
		table.column(0).search($('#GvFilter th input:eq(0)').val());
		table.column(1).search($('#GvFilter th input:eq(1)').val());
		table.column(2).search($('#GvFilter th input:eq(2)').val());
		table.column(3).search($('#GvFilter th input:eq(3)').val());
		table.column(4).search($('#GvFilter th input:eq(4)').val()).draw();
	});
	$("#BtnClear").bind("click", function () {
		$('#GvFilter th input:eq(0)').val("");
		$('#GvFilter th input:eq(1)').val("");
		$('#GvFilter th input:eq(2)').val("");
		$('#GvFilter th input:eq(3)').val("");
		$('#GvFilter th input:eq(4)').val("");
		$("#BtnFilter").trigger("click");
	});
	$(".filter-input").on("keypress", function (event) {
		if (event.which == 13) {
			$("#BtnFilter").trigger("click");
		}
	});
	$('#myTable tbody').on("click", "#formDelete", function () {
		var obj = $(this);
		bootbox.confirm("Are you sure want to delete this data?", function (result) {
			if (result) {
				obj.submit();
			}
		});
	});
	$('#myTable tbody').on("click", "#formInactivateUAC", function () {
		var obj = $(this);
		bootbox.confirm("Are you sure want to inactivate this user level?", function (result) {
			if (result) {
				obj.submit();
			}
		});
	});
	$('#myTable tbody').on("click", "#formActivateUAC", function () {
		var obj = $(this);
		bootbox.confirm("Are you sure want to activate this user level?", function (result) {
			if (result) {
				obj.submit();
			}
		});
	});
});